// ~*~* WELCOME ~*~*

.welcome-wrapper
  position relative
  width 100vw
  height 100vh

  margin 0 auto

  &__desktop
    display block
    position absolute
    z-index 1

    top 50%
    left 50%
    transform translate(-50%, -50%)

    background-color $periwinkle
    background linear-gradient($bridesmade, $periwinkle) /* Standard syntax */

  &__border
    position absolute

    z-index 2

    top 50%
    left 50%
    transform translate(-50%, -50%)

    width 300px
    height 300px

    border-style solid
    border-width 63px 62px
    border-image url(../images/index/heartjar-border.gif) 79 72 repeat

.welcome-msg
  position relative
  z-index 5
  display inline-block
  top 110%
  left 68%

  color #f7498e
  font-family 'MarkPro-Bold-Italic', 'Helvetica', 'Arial', sans-serif
  font-size 1.5em
  text-shadow 0.05em 0.05em 0.1em #00a2e0, 0 0 0.2em #ffff00

  text-decoration none
  font-size 30px

  vertical-align middle

.menu
  position sticky
  position absolute
  bottom 0

  &__flower
    position relative
    display inline-block
    bottom 0
    left 0
    z-index 0

    vertical-align middle

    padding 10px

  &__msg
    position relative
    display inline-block

    vertical-align middle

    margin 0
    padding 10px 0

    span
      display inline-block
      font-family monospace

      &:nth-child(1n)
        color #65cc01

      &:nth-child(2n)
        color #00a2e0

      &:nth-child(3n)
        color #f7498e

      &:nth-child(odd)
        // transform translateY(-1px)
        animation bounce 1s linear infinite

      &:nth-child(even)
        // transform translateY(1px)
        animation bounce 1s linear infinite reverse

@keyframes bounce
  0%
    transform translateY(-1px)
  1%
    transform translateY(1px)

  50%
    transform translateY(1px)
  51%
    transform translateY(-1px)
